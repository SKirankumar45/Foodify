{
    "version": 2,
    "builds": [
      {
        "src": "foodify/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles_build"
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "foodify/wsgi.py"
      }
    ],
    "installCommand": "python3 -m pip install -r requirements.txt",
  "buildCommand": "./build_files.sh"
  }